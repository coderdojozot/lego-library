{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Pybricks Bluetooth Upload",
            "type": "shell",
            "command": "${workspaceFolder}\\.venv\\Scripts\\python.exe",
            
            "args": [
                "-m",
                "pybricksdev",
                "run",
                "ble",
                "--name",
                "Pybricks Hub",
                "--start",
                
                "${workspaceFolder}/code/start_code.py" /* pas hier het pad aan voor welk bestand dat je wilt uitvoeren*/
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true,
                "close": false
            },
            "problemMatcher": []
        }
    ]
}